<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

  <display-name>Nalasys webapp testing</display-name>
  <description>Nalasys webapp testing</description>

  <servlet>
    <servlet-name>nalasys</servlet-name>
    <servlet-class>org.regadou.nalasys.Servlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>nalasys</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  
  <listener>
    <listener-class>org.regadou.nalasys.WebListener</listener-class>
  </listener>
   
</web-app>
